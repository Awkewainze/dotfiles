{
	"catppuccin.accentColor": "pink",
	"catppuccin.extraBordersEnabled": true,
	"containers.containerClient": "com.microsoft.visualstudio.containers.podman",
	"containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.podmancompose",
	"cSpell.userWords": [
		"btop",
		"cachyos",
		"chezmoi",
		"fira",
		"noisetorch",
		"prismlauncher",
		"vesktop"
	],
	"diffEditor.codeLens": true,
	"editor.acceptSuggestionOnEnter": "smart",
	"editor.codeLensFontFamily": "Fira Code",
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "all",
	"editor.semanticHighlighting.enabled": true, // we try to make semantic highlighting look good
	"eslint.format.enable": true,
	"eslint.runtime": "bun",
	"gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
	"gitlens.ai.model": "gitkraken",
	"javascript.preferences.quoteStyle": "double",
	"redhat.telemetry.enabled": false,
	"terminal.integrated.fontLigatures.enabled": true,
	"terminal.integrated.minimumContrastRatio": 1, // prevent VSCode from modifying the terminal colors
	"typescript.preferences.quoteStyle": "double",
	"window.newWindowProfile": "Default",
	"window.titleBarStyle": "custom", // make the window's titlebar use the workbench colors
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "catppuccin-mocha",
}